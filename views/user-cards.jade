          for card in deckInfo
            div.card
              p.hidden-name= card.name
              a.card-id(href=card.cardId)
                img(src=card.img)
    div.added-cards
      if playerClass
        if deckInfo[0].playerClass
          h2 #{deckInfo[0].playerClass} Deck
      h3#card-counter 0/30 cards
      form(action='/remove-cards/' + userName, method='post')
        input(type='submit', value='Remove Cards from deck')
        h3#card-at-max Can not add any more. You are at 30 cards.
        table.cards-table
          thead
            tr
              th Name
              th Cost
              th Remove
          tbody#card-data
