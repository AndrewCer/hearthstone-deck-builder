doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  div.navbar
    a(href='/') Home
    div.title
      h1 HearthNode
  div.jumbotron(style='background-image: url("../images/signupbanner.jpg");')
  div.container
    h1(style='text-align: center') Sign Up for Free HearthNode Account
    div.main-scroll(style='text-align: center')
      form(action='/signup', method='post')
        if usernameErrorArray
          for error in usernameErrorArray
            h2(style='color: red;')= error
        label(for='username') User Name
        br
        input#username(type='text', name='user_name', required, autofocus, value=userName)
        br
        if pwErrorArray
          for error in pwErrorArray
            h2(style='color: red;')= error
        if inputError
          h2(style='color: red;')= inputError
        label(for='password') Password
        br
        input#password(type='password', name='password', required)
        br
        label(for='pass-confirm') Password Confirmation
        br
        input#pass-confirm(type='password', name='pass_confirm', required)
        br
        input(type='submit', value='Sign Up')
        a(href='/') Cancel
  div.footer
    p Andrew Cer 2015
  script(src='/javascripts/client.js')
